            <LinearLayout
                android:id="@+id/wash_dishes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:background="@drawable/shape_hints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/image"
                        android:src="@drawable/icon_wash"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Wash the Dishes"
                        android:textSize="@dimen/text_size_main_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/wash_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Feel the water's temperature and texture on your hands, hear the dishes clinking, and notice how you move while scrubbing and rinsing. Allow yourself to enjoy making the dishes clean again. If your mind starts to wander, it's completely fine. Just acknowledge it and gently guide your focus back to washing. Focus all your attention on what you're doing."
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_main_small" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/workout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:background="@drawable/shape_hints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/image_workout"
                        android:src="@drawable/icon_workout"
                        android:layout_margin="5dp"/>

                    <TextView
                        android:id="@+id/name_workout"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Workout"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_main_large"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/workout_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Pay attention to your body's sensationsâ€”observe your muscles, movement speed, breathing, and any tension or resistance. Feel the stretch and intensity. Simply notice your emotions without judgment. Do you feel accomplished? Are you being too harsh on yourself, or comparing your body shape with others?"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_main_small"
                    android:visibility="gone"/>

            </LinearLayout>

