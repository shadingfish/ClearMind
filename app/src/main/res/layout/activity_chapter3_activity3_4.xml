<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2FFD8"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="4. Leaves on a Stream"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_heading_small" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/text_internal"
                android:text="Cognitive defusion exercises are commonly used in Acceptance and Commitment Therapy. These tools are designed to help you disentangle from any challenging thoughts you're experiencing. They encourage you to look at your thoughts in a new way. The key point of cognitive defusion is to realize that you are merely observing your thoughts, and you are not the thoughts themselves nor controlling your thoughts."
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_main_large" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_internal"
                android:text="One popular technique people commonly practice is called Leave on a Stream exercise. Let’s watch the video and practice together."
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_main_large" />

            <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/webView"
                android:layout_marginBottom="@dimen/text_internal"
                tools:ignore="WebViewLayout" />


            <TextView
                android:id="@+id/transcript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_hints"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="@dimen/text_internal"
                android:text="Can’t play the video?"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_main_small" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_internal"
                android:text="There are a variety of visualizations you can also apply the same principle. Some common examples are:"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_main_large" />

            <LinearLayout
                android:id="@+id/beach_ball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:background="@drawable/shape_hints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

<!--                    <ImageView-->
<!--                        android:layout_width="35dp"-->
<!--                        android:layout_height="35dp"-->
<!--                        android:id="@+id/image"-->
<!--                        android:src="@drawable/icon_wash"-->
<!--                        android:layout_margin="5dp"/>-->

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Beach Balls"
                        android:textSize="@dimen/text_size_main_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/beach_ball_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Imagine placing a beach ball in a bathtub filled with water and trying to push it down. No matter how hard you push, the ball will keep popping back up. This illustrates the impossibility of rejecting or suppressing reality or the difficult emotions we experience. The truth is, it only makes them return with stronger force because what you resist will persist."
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_main_small" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_train"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:background="@drawable/shape_hints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="A Train"
                        android:textSize="@dimen/text_size_main_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/a_train_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Picture yourself standing on a bridge, observing a train as it passes beneath you. Each boxcar carries a negative thought, word, or phrase. By watching the train move along, you detach yourself from these thoughts."
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_main_small" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/quicksand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:background="@drawable/shape_hints">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Quicksand Visualization"
                        android:textSize="@dimen/text_size_main_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:textColor="#000000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/quicksand_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Imagine being stuck in quicksand, similar to a person struggling against difficult emotions, which only causes us to sink deeper. By accepting our situation, like lying flat on the quicksand and not resisting, we can keep ourselves from sinking deeper."
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_main_small" />

            </LinearLayout>



            <Button
                android:id="@+id/button_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                app:backgroundTint="#5FA12E" />

            <Button
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                app:backgroundTint="#5FA12E"/>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        app:backgroundTint="#5FA12E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>