<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FFD8">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2FFD8"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-165dp"
        app:layout_constraintBottom_toTopOf="@+id/button_previous" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="ClearMind Pre-Survey"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progress="8"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="16dp" />


            <TextView
                android:id="@+id/introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="How much do you, yourself agree to the following statements? \n1 = Disagree; 5 = Agree"
                android:textSize="16dp"
                android:textStyle="bold" />


            <!--      QUESTION 5      -->
            <TextView
                android:id="@+id/question_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="5. I usually allocate time to review and proofread my work."
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


            <!--      QUESTION 6      -->
            <TextView
                android:id="@+id/question_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:text="6. I put off projects until the last minute."
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


            <!--      QUESTION 7      -->
            <TextView
                android:id="@+id/question_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:text="7. I have found myself waiting until the day before to start a big project."
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


            <!--      QUESTION 8      -->
            <TextView
                android:id="@+id/question_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:text="8. I know I should work on school work, but I just donâ€Ÿt do it."
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>

            <!--      QUESTION 9      -->
            <TextView
                android:id="@+id/question_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:text="9. When working on schoolwork, I usually get distracted by other things."
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="1" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="2" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="3" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="4" />
                <RadioButton
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:text="5" />
            </RadioGroup>


            <!--     Place holder   -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:text=""
                android:textSize="16dp" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_previous"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_gravity="left"
        app:backgroundTint="#5FA12E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="right"
        app:backgroundTint="#5FA12E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>